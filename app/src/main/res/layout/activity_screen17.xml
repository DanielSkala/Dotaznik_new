<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.daniel.dotaznik.Screen17">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Späť"
        android:id="@+id/button32"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ďalej"
        android:id="@+id/button33"
        android:layout_alignTop="@+id/button32"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView17"
        android:src="@drawable/obr"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText29"
        android:text="Prečítajte otázku aj predtlačené možnosti a zakrúžkujte len jednu  možnosť podľa odpovede respondenta."
        android:textStyle="italic"
        android:textColor="#F44336"
        android:textAlignment="center"
        android:layout_below="@+id/imageView17"
        android:layout_alignRight="@+id/button33"
        android:layout_alignEnd="@+id/button33"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText40"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="S pôsobením súčasného predsedu (župana) Bratislavského  samosprávneho kraja (BSK) Pavla Freša ste:"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spokojný"
        android:id="@+id/checkBox90"
        android:checked="false"
        android:layout_marginBottom="34dp"
        android:layout_above="@+id/checkBox93"
        android:layout_alignLeft="@+id/editText40"
        android:layout_alignStart="@+id/editText40" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skôr spokojný"
        android:id="@+id/checkBox91"
        android:checked="false"
        android:layout_alignTop="@+id/checkBox90"
        android:layout_toRightOf="@+id/checkBox94"
        android:layout_toEndOf="@+id/checkBox94" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skôr nespokojný"
        android:id="@+id/checkBox92"
        android:checked="false"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/checkBox94"
        android:layout_alignRight="@+id/checkBox91"
        android:layout_alignEnd="@+id/checkBox91" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nespokojný"
        android:id="@+id/checkBox93"
        android:checked="false"
        android:layout_alignTop="@+id/checkBox92"
        android:layout_alignLeft="@+id/checkBox90"
        android:layout_alignStart="@+id/checkBox90" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Neviem"
        android:id="@+id/checkBox94"
        android:layout_above="@+id/button33"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:checked="false"
        android:textColor="#878787" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="16/25"
        android:id="@+id/textView18"
        android:layout_alignBottom="@+id/button32"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
