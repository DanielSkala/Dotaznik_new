        android:layout_height="wrap_content"
        android:id="@+id/textView94"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:textColor="#000000"
        android:layout_above="@+id/button33"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="68dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nespokojný"
        android:id="@+id/checkBox93"
        android:checked="false"
        android:textSize="18sp"
        android:layout_below="@+id/button32"
        android:layout_alignLeft="@+id/checkBox90"
        android:layout_alignStart="@+id/checkBox90"
        android:layout_marginTop="87dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spokojný"
        android:id="@+id/checkBox90"
        android:checked="false"
        android:textSize="18sp"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/checkBox92"
        android:layout_alignLeft="@+id/textView93"
        android:layout_alignStart="@+id/textView93" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skôr nespokojný"
        android:id="@+id/checkBox92"
        android:checked="false"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/checkBox93"
        android:layout_alignBottom="@+id/checkBox93"
        android:layout_toLeftOf="@+id/button33"
        android:layout_toStartOf="@+id/button33" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skôr spokojný"
        android:id="@+id/checkBox91"
        android:checked="false"
        android:textSize="18sp"
        android:layout_above="@+id/checkBox94"
        android:layout_alignLeft="@+id/checkBox92"
        android:layout_alignStart="@+id/checkBox92" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pozor! Anketár nikdy neponúkne možnosť neviem!!!"
        android:id="@+id/textView95"
        android:textColor="#f44336"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Neviem"
        android:id="@+id/checkBox94"
        android:checked="false"
        android:textColor="#878787"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:layout_below="@+id/checkBox90"
        android:layout_toRightOf="@+id/checkBox93"
        android:layout_toEndOf="@+id/checkBox93"
        android:layout_marginTop="26dp" />

    <TextView
        android:text="Pokyn: Prečítajte otázku aj predtlačené možnosti a zakrúžkujte len jednu  možnosť podľa odpovede respondenta."
        android:layout_width="470dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView93"
        android:textStyle="normal|italic"
        android:textSize="18sp"
        android:textColor="#f44336"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView17"
        android:layout_toEndOf="@+id/imageView17"
        android:layout_marginTop="14dp" />
</RelativeLayout>
