<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.daniel.dotaznik.Screen25">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Späť"
        android:id="@+id/button48"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ďalej"
        android:id="@+id/button49"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView25"
        android:src="@drawable/obr"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText60"
        android:text="Prečítajte otázku aj predtlačené možnosti a zakrúžkujte len jednu možnosť  podľa odpovede respondenta."
        android:textStyle="italic"
        android:textColor="#F44336"
        android:textAlignment="center"
        android:layout_below="@+id/imageView25"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText61"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="Vaše volebné rozhodnutie je:"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Definitívne"
        android:id="@+id/checkBox168"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/editText61"
        android:layout_alignLeft="@+id/editText61"
        android:layout_alignStart="@+id/editText61"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skôr definitívne"
        android:id="@+id/checkBox169"
        android:layout_alignTop="@+id/checkBox168"
        android:layout_alignRight="@+id/editText61"
        android:layout_alignEnd="@+id/editText61"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skôr nie je definitívne"
        android:id="@+id/checkBox170"
        android:layout_below="@+id/checkBox168"
        android:layout_alignLeft="@+id/checkBox168"
        android:layout_alignStart="@+id/checkBox168"
        android:layout_marginTop="41dp"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nie je definitívne"
        android:id="@+id/checkBox171"
        android:layout_alignBottom="@+id/checkBox170"
        android:layout_alignLeft="@+id/checkBox169"
        android:layout_alignStart="@+id/checkBox169"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Neviem"
        android:id="@+id/checkBox172"
        android:layout_below="@+id/checkBox170"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:checked="false"
        android:textColor="#878787" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="23/25"
        android:id="@+id/textView28"
        android:layout_alignBottom="@+id/button49"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
