<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.daniel.dotaznik.Screen23">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pozor! Anketár nikdy neponúkne možnosť neviem!!!"
        android:id="@+id/textView114"
        android:textColor="#f44336"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView23"
        android:src="@drawable/obr"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="21/25"
        android:id="@+id/textView25"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:text="&lt;"
        android:id="@+id/button44"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="36sp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:text=">"
        android:id="@+id/button45"
        android:layout_alignBaseline="@+id/button44"
        android:layout_alignBottom="@+id/button44"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="36sp" />

    <TextView
        android:text="Vaše volebné rozhodnutie je:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView113"
        android:textStyle="normal|bold"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_below="@+id/imageView23"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Definitívne"
        android:id="@+id/checkBox161"
        android:checked="false"
        android:textSize="18sp"
        android:onClick="onCheckboxClicked"
        android:layout_alignBaseline="@+id/checkBox162"
        android:layout_alignBottom="@+id/checkBox162"
        android:layout_alignLeft="@+id/textView113"
        android:layout_alignStart="@+id/textView113" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skôr definitívne"
        android:id="@+id/checkBox162"
        android:checked="false"
        android:textSize="18sp"
        android:onClick="onCheckboxClicked"
        android:layout_below="@+id/button45"
        android:layout_alignRight="@+id/textView113"
        android:layout_alignEnd="@+id/textView113"
        android:layout_marginRight="57dp"
        android:layout_marginEnd="57dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skôr nie je definitívne"
        android:id="@+id/checkBox163"
        android:checked="false"
        android:textSize="18sp"
        android:onClick="onCheckboxClicked"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/checkBox161"
        android:layout_alignLeft="@+id/checkBox161"
        android:layout_alignStart="@+id/checkBox161" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nie je definitívne"
        android:id="@+id/checkBox164"
        android:checked="false"
        android:textSize="18sp"
        android:onClick="onCheckboxClicked"
        android:layout_alignBaseline="@+id/checkBox163"
        android:layout_alignBottom="@+id/checkBox163"
        android:layout_toLeftOf="@+id/textView25"
        android:layout_toStartOf="@+id/textView25" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Neviem"
        android:id="@+id/checkBox167"
        android:checked="false"
        android:textColor="#878787"
        android:onClick="onCheckboxClicked"
        android:layout_marginTop="74dp"
        android:layout_below="@+id/checkBox163"
        android:layout_alignRight="@+id/checkBox163"
        android:layout_alignEnd="@+id/checkBox163" />

    <TextView
        android:text="Prečítajte otázku aj predtlačené možnosti a zakrúžkujte len jednu možnosť podľa  odpovede respondenta."
        android:layout_width="470dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView110"
        android:textStyle="normal|bold|italic"
        android:textSize="22sp"
        android:textColor="#f44336"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/button45"
        android:layout_toStartOf="@+id/button45" />

</RelativeLayout>
